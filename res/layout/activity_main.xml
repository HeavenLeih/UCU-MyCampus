<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ucub1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucuccs.ucumycampus.MainActivity" >

    <TextView
        android:id="@+id/viewUcu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="UCU MyCampus"
        android:textSize="30dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewUcu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/line" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_alignLeft="@+id/imLine"
        android:layout_below="@+id/imLine"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imBuild"
        android:layout_width="wrap_content"
        android:layout_height="180dip"
        android:layout_below="@+id/imLine1"
        android:layout_marginTop="37dp"
        android:layout_toLeftOf="@+id/imRoom"
        android:src="@drawable/building1" />

    <ImageView
        android:id="@+id/imRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/viewUcu"
        android:layout_alignTop="@+id/imLine1"
        android:src="@drawable/classroom1" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dip"
        android:layout_height="90dip"
        android:layout_alignLeft="@+id/imRoom"
        android:layout_below="@+id/imRoom"
        android:src="@drawable/about1" />

    <ImageView
        android:id="@+id/imLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/map"
        android:layout_below="@+id/map"
        android:layout_marginTop="14dp"
        android:src="@drawable/line" />

</RelativeLayout>